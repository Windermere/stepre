= form_for [@step, @attr], :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :display_name, :class => 'control-label'
    .controls
      = f.text_field :display_name, :class => 'text_field'

  .control-group
    = f.label :element, :class => 'control-label'
    .controls
      = f.select :element, options_for_select(Attr.element_options)

  .control-group
    = f.label :step_id, :class => 'control-label'
    .controls
      = f.number_field :step_id, :class => 'number_field'

  .control-group
    = f.label :form_id, :class => 'control-label'
    .controls
      = f.number_field :form_id, :class => 'number_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), step_attrs_path(@step), :class => 'btn'
