- model_class = Attr
.page-header
  %h1=t '.title', :default => model_class.model_name.human
  = link_to t('.validations', :default => t("helpers.links.validations")), attr_validations_path(@attr), :class => 'btn btn-inverse'

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @attr.name
%p
  %strong= model_class.human_attribute_name(:display_name) + ':'
  %br
  = @attr.display_name
%p
  %strong= model_class.human_attribute_name(:step_id) + ':'
  %br
  = @attr.step_id
%p
  %strong Required:
  %br
  = @attr.reck
%p
  %strong= model_class.human_attribute_name(:form_id) + ':'
  %br
  = @attr.form_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), step_attrs_path(@step), :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_step_attr_path(@step, @attr), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), step_attr_path(@step, @attr), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
