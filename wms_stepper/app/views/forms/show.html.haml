- model_class = Form
.page-header
  %h1=t '.title', :default => model_class.model_name.human
  = link_to t('.steps', :default => t("helpers.links.steps")), form_steps_path(@form), :class => 'btn btn-inverse'

.tabbable
  %ul.nav.nav-tabs
    %li.active
      %a{"data-toggle" => "tab", :href => "#meta_attrs"} Meta Attrs
    %li
      %a{"data-toggle" => "tab", :href => "#obj_attrs"} Object Attrs

  .tab-content
    #meta_attrs.tab-pane.active
      %p
        %strong= model_class.human_attribute_name(:name) + ':'
        %br
        = @form.name

    #obj_attrs.tab-pane
      %ul
        - @form.attrs.each do |attr|
          %li= attr.name

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), forms_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_form_path(@form), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), form_path(@form), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
