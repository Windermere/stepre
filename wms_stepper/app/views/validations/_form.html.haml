= simple_form_for [@attr, @validation], :html => { :class => 'form-horizontal' } do |f|
  = f.input :name
  = f.input :desc
  = f.input :snippet
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), attr_validations_path(@attr), :class => 'btn'
