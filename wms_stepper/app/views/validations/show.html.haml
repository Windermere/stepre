- model_class = Validation
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @validation.name
%p
  %strong= model_class.human_attribute_name(:desc) + ':'
  %br
  = @validation.desc
%p
  %strong= model_class.human_attribute_name(:snippet) + ':'
  %br
  = @validation.snippet

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), attr_validations_path(@attr), :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_attr_validation_path(@attr, @validation), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), attr_validation_path(@attr, @validation), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
