- model_class = Step
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:position)
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:prev_step_id)
      %th= model_class.human_attribute_name(:next_step_id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:template)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @steps.each do |step|
      %tr
        %td= step.position
        %td= link_to step.id, form_step_path(@form, step)
        %td= step.prev_step_id
        %td= step.next_step_id
        %td= step.name
        %td= step.template
        %td= step.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_form_step_path(@form, step), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), form_step_path(@form, step), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_form_step_path, :class => 'btn btn-primary'
