- model_class = Step
.page-header
  %h1=t '.title', :default => model_class.model_name.human
  = link_to t('.attrs', :default => t("helpers.links.attrs")), step_attrs_path(@step), :class => 'btn btn-inverse'

%p
  %strong= model_class.human_attribute_name(:position) + ':'
  %br
  = @step.position

%p
  %strong= model_class.human_attribute_name(:form_id) + ':'
  %br
  = @step.form_id

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @step.name

%p
  %strong= model_class.human_attribute_name(:template) + ':'
  %br
  = @step.template

%p
  %strong= model_class.human_attribute_name(:prev_step) + ':'
  %br
  = @step.prev_step.try(:name)

%p
  %strong= model_class.human_attribute_name(:next_step) + ':'
  %br
  = @step.next_step.try(:name)

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), form_steps_path(@form), :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_form_step_path(@form, @step), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), form_step_path(@form, @step), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
